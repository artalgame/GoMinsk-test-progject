<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_margin="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp" >

    <ImageView
        android:id="@+id/categoryImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/test_circular_image_view"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/categoryDescrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/categoryImageView"
        android:layout_alignLeft="@+id/categoryNameTextView"
        android:layout_margin="4dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/categoryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/categoryImageView"
        android:layout_toRightOf="@+id/categoryImageView"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
