<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/walkNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Freedom Walk"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/watch_detailed_walk_03" />

        <TextView
            android:id="@+id/walkTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5 h"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <ImageView
        android:id="@+id/walkImageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/rectangle_sub"
        android:visibility="gone" />

    <TextView
        android:id="@+id/walkDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:autoLink="web|email|phone"
        android:linksClickable="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        android:text="This app bla bla bla.....Lorem Ipsum is simply dummy text  fdkjflkdsj jfdskljflasj djsfljasdlkf sadlfjlksadjflkasdflk jsadlkf laskdjflksadjflk ajlkfsdjlkfjaslk jlfkjlaskdjflkjas ljfasldkjf lasj"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/walkObjectsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:overScrollMode="never" >
    </ListView>

</LinearLayout>